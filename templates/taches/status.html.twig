
    {% if tache.status == constant('App\\Entity\\Tache::STATUS').TO_RUN %}
        <span class="badge badge-primary status">{{ tache.status }}</span>
        <a class="tache start" data-tacheid="{{ tache.id }}" href="{{ path('taches_start',{'id':tache.id}) }}"><i class="fas fa-play"></i></a>
    {% elseif tache.status == constant('App\\Entity\\Tache::STATUS').RUNNING %}
        <span class="badge badge-warning status">{{ tache.status }}</span>
        {% if tache.realStatus is defined %}
            {% if app_env is defined and app_env == 'dev' %}
                <br />
                <span class="badge badge-secondary">pid:{{ tache.pid }}</span>
                {% if tache.realStatus == 'RUNNING' %}
                    <span class="badge badge-warning">{{ tache.realStatus }}</span>
                {% else %}
                    <span class="badge badge-danger">{{ tache.realStatus }}</span>
                {% endif %}
            {% endif %}
            <a class="stop" href="{{ path('taches_stop',{'id':tache.id}) }}"><i class="fas fa-skull"></i></a>
        {% endif %}
        {% if tache.progress is not null %}
            {% set width = 0 %}
            {% if tache.progress.phases is defined and tache.progress.phases is not null and tache.progress.step is defined and tache.progress.max is defined %}
                {% set width = ( ( tache.progress.step / tache.progress.max ) / tache.progress.phases ) + ( ( tache.progress.phase - 1 ) / tache.progress.phases ) %}
            {% endif %}
            {% if width > 0 %}
            <div class="progress"{% if tache.status.libelle is defined %} title="{{ tache.libelle|e('html') }}"{% endif %}>
                <div class="progress-bar" role="progressbar" style="width:{{ (width*100)|round(2) }}%"></div>
            </div>
            {% endif %}
        {% endif %}
    {% elseif tache.status == constant('App\\Entity\\Tache::STATUS').INTERRUPTED %}
        <span class="badge badge-dark status"><i class="fas fa-stop-circle"></i> {{ tache.status }}</span>
        <a class="tache start" data-tacheid="{{ tache.id }}" href="{{ path('taches_start',{'id':tache.id,'force':1}) }}"><i class="fas fa-play"></i></a>
    {% elseif tache.status == constant('App\\Entity\\Tache::STATUS').COMPLETED %}
        <span class="badge badge-success status"><i class="fas fa-check"></i> {{ tache.status }}</span>
        {% if app_env is defined and app_env == 'dev' %}
            <a class="tache start" data-tacheid="{{ tache.id }}" href="{{ path('taches_start',{'id':tache.id,'force':1}) }}"><i class="fas fa-play"></i></a>
        {% endif %}
    {% elseif tache.status == constant('App\\Entity\\Tache::STATUS').FAILED %}
        <span class="badge badge-danger status"><i class="fas fa-exclamation-triangle"></i> {{ tache.status }}</span>
        <a class="tache start" data-tacheid="{{ tache.id }}" href="{{ path('taches_start',{'id':tache.id,'force':1}) }}"><i class="fas fa-play"></i></a>
    {% else %}
        {{ tache.status }}
    {% endif %}